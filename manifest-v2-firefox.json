{
  "manifest_version": 2,
  "name": "Palestinian Domain Blocker",
  "version": "3.1.2",
  "description": "Community-driven domain blocking extension supporting Palestinian solidarity through ethical boycotts. Block Israeli domains and companies complicit in occupation.",
  "author": "Palestinian Solidarity Community",
  "homepage_url": "https://github.com/arcanstone/Palestinian-Domain-Blocker-v2",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage", 
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background-firefox.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Palestinian Domain Blocker",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png", 
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    "blocked.html",
    "blocked.js",
    "chrome-warning.html"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "browser_specific_settings": {
    "gecko": {
      "id": "palestinian-domain-blocker@solidarity.org",
      "strict_min_version": "90.0"
    }
  }
}